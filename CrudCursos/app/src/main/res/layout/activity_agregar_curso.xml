<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgregarCursoActivity">


    <EditText
        android:id="@+id/etNombreCurso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:inputType="textPersonName"
        android:hint="Escriba el nombre del curso"
        />

    <EditText
        android:id="@+id/etInstitucionCurso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etNombreCurso"
        android:inputType="textPersonName"
        android:hint="Escriba la instituciÃ³n donde se imparte el curso"
        />

    <Button
        android:id="@+id/btnAgregarCurso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/margin"
        android:text="Guardar curso"
        app:layout_constraintTop_toBottomOf="@id/etInstitucionCurso"
        />


    <Button
        android:id="@+id/btnCancelarNuevoCurso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:layout_margin="@dimen/margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnAgregarCurso"
        app:layout_constraintTop_toBottomOf="@id/etInstitucionCurso"
        />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="143dp"
        android:textSize="30sp" />

</androidx.constraintlayout.widget.ConstraintLayout>